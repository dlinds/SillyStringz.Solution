@{
  Layout = "_Layout";
}
@using Factory.Models;
@model Factory.Models.Engineer
<div class="px-5 py-5 bg-light">
  @using (Html.BeginForm())
  {
    <div class="form-group px-5">
      <div class="row">
        <div class="col">
          @Html.LabelFor(model => model.Name, "Engineer Name")
          @Html.TextBoxFor(model => model.Name, new {@class = "form-control", required = "required"})
        </div>
        <div class="col">
          @Html.LabelFor(model => model.ShiftStart, "Shift Start")

        </div>
        <div class="col">
          @Html.LabelFor(model => model.ShiftEnd, "Shift Start")

          </div>
      </div>
    </div>
    <div class="form-group px-5 mt-3">
      <input type="submit" value="Add new engineer" class="btn btn-dark btn-small" />
    </div>
  }
</div>
