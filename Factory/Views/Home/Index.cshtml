@{
  Layout = "_Layout";
}
@using Factory.Models
<div class="row">
  <div class="col-lg-5 col-sm-12 text-center">
    <div class="display-4">
      Machines
    </div>
    @foreach (Machine machine in ViewBag.ListOfMachines)
    {
      <a href="machines/?id=@machine.MachineId" class="text-decoration-none text-dark ">
        <div class="card my-3  shadow-sm">
          <div class="card-header bg-dark text-white">
            <h3>@machine.MachineName</h3>
          </div>
          <div class="card-body">
            <p class="card-text">
              Make: @machine.MachineMake
              <br>
              Model: @machine.MachineModel
              <br>
              Purpose: @machine.MachinePurpose
              <br>
              Manufactured Year: @machine.ManufacturedYear
            </p>
          </div>
        </div>
      </a>
    }
  </div>
  <div class="col-lg-2 col-sm-12">
  </div>
  <div class="col-lg-5 col-sm-12 text-center">
    <div class="display-4">
      Engineers
    </div>
    @foreach (Engineer engineer in ViewBag.ListOfEngineers)
    {
      <div class="card my-3  shadow-sm">
        <div class="card-header bg-dark text-white">
          <h3>@engineer.Name</h3>
        </div>
        <div class="card-body">
          <p class="card-text">
            Shift Start: @(DateTime.Today.Add(engineer.ShiftStart).ToString("hh:mm tt"))
            <br>
            Shift End: @(DateTime.Today.Add(engineer.ShiftEnd).ToString("hh:mm tt"))
          </p>
        </div>
      </div>
    }
  </div>
</div>
